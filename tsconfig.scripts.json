{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "rootDir": ".",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["scripts/**/*.ts", "prisma/**/*.ts"],
    "exclude": ["node_modules"]
  }
  
  